####################################################################################################
######################################### Program Name #############################################
####################################################################################################

NAME	= teste_gmp

####################################################################################################
######################################### Compiler #################################################
####################################################################################################

CXX			= gcc
CXXFLAGS	+= -lgmp -Wall -Wextra #-Werror

####################################################################################################
##################################### Include Folders ##############################################
####################################################################################################

INCLUDE =	$(addprefix -I ./includes, \
			/ \
			)

####################################################################################################
######################################### Headers files ############################################
####################################################################################################

MAIN_HEADERS	= $(addprefix ./includes/, \
					teste.h teste2.h \
				)


####################################################################################################
########################################## Source files ############################################
####################################################################################################

SRC		= $(addprefix src/, \
          	main.c teste.c teste2.c \
		  	)


####################################################################################################
########################################## Objects files ###########################################
####################################################################################################


%.o: %.c $(MAIN_HEADERS)
	$(CC) $(CFLAGS) $(INCLUDE) -c $< -o $(<:%.c=$(OBJ_DIR)%.o)

OBJ_DIR = obj/
OBJ_FT	= $(SRC:%.c=%.o)
OBJ_FILES	= $(addprefix $(OBJ_DIR),$(OBJ_FT))

all: $(NAME)

$(NAME): $(OBJ_DIR) $(OBJ_FT)
	$(CXX) $(CXXFLAGS) $(OBJ_FILES) -o $(NAME) -lgmp

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)/src

####################################################################################################
########################################## Default Rules ###########################################
####################################################################################################

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re

####################################################################################################
####################################################################################################
####################################################################################################
